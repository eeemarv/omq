{% extends 'base.html.twig' %}


{% block content %}

<div class="row"><div class="col-md-12">
<p></p>

<h3>{{ 'password_reset.heading'|trans }}</h3>

<div class="panel panel-default">
<div class="panel-body">

{{ form_start(form) }}

<p>

<div class="input-group input-group-lg">
<span class="input-group-btn">
<button class="btn btn-info" type="button"><i class="fa fa-envelope-o"></i></button>
</span>
{{ form_widget(form.email, {'attr': {'placeholder': 'password_reset.email'}}) }}
</div>
{{ form_errors(form.email) }}

</p>

<p>
{{ form_widget(form.submit, {'label': 'password_reset.submit_btn', 'attr': {'class': 'btn btn-default btn-lg'}}) }}
</p>

{{ form_end(form) }}

</div>
</div>

</div>
</div>

{% endblock content %}

